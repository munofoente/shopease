<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="containerComponents" >
        <item name="android:layout_width" >match_parent</item>
        <item name="android:layout_height">250dp</item>
        <item name="android:background" >@drawable/view_padrao</item>
        <item name="android:layout_margin">20dp</item>
    </style>

    <style name="Edit_text">

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/edit_text</item>
        <item name="android:padding">20dp</item>
        <item name="maxLines">1</item>
        <item name="android:layout_marginLeft">40dp</item>
        <item name="android:layout_marginRight">40dp</item>
        <item name="android:layout_marginTop">15dp</item>
    </style>

    <style name="botao_entrar">

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">40dp</item>
        <item name="android:layout_marginRight">40dp</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:padding">20dp</item>
        <item name="android:background">@drawable/botao_entrar</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>

    </style>

    <style name="containerIc" >
        <item name="android:layout_width" >match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background" >@drawable/container_icones</item>
        <item name="android:layout_margin">20dp</item>
    </style>


</resources>